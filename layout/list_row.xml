<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemNoteImg"
        android:src="@drawable/p"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Note Title"
        android:layout_alignParentTop="true"
        android:id="@+id/listNoteItemTitle"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My name is Poonam Mishra and i study at Bits Pilani. My branch is MSc Chemistry and BE Manufacturing."
        android:layout_alignParentEnd="true"
        android:id="@+id/listNoteItemBody"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:singleLine="true"
        android:layout_below="@id/listNoteItemTitle"/>





</RelativeLayout>
